<%= render 'menu' %>

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Length</th>
      <th>Width</th>
      <th>Height</th>
      <th>Weight</th>
      <th colspan="3" class="table-cell-buttons"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.type %></td>
        <td><%= product.length %></td>
        <td><%= product.width %></td>
        <td><%= product.height %></td>
        <td><%= product.weight %></td>
        <td class="table-cell-buttons"><%= link_to 'Show', product, :class => 'button' %></td>
        <td class="table-cell-buttons"><%= link_to 'Edit', edit_product_path(product), :class => 'button' %></td>
        <td class="table-cell-buttons"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'button-dangerous' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

